{
  "title": "Ensono Independent Runner",
  "output": "{{ basepath }}/outputs/docs/{{ format }}",
  "trunkBranch": "main",
  "path": "{{ basepath }}/docs/index.adoc",
  "libs": [
    "asciidoctor-diagram",
    "/usr/local/ensono/lib/glob-include-processor.rb"
  ],
  "pdf": {
    "attributes": {
      "asciidoctor": [
        "pdf-theme={{ basepath }}/docs/styles/theme.yml",
        "pdf-fontsdir=\"{{ basepath }}/docs/styles/fonts;GEM_FONTS_DIR\"",
        "allow-uri-read",
        "blockdiag=/usr/bin/blockdiag",
        "skip-front-matter"
      ]
    }
  },
  "html": {
    "attributes": {
      "pandoc": ["--embed-resources=true"]
    }
  }
}
